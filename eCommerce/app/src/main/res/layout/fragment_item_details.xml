<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/border"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/details_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="ID: 0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Order Number: 0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_item_id"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name: Item"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details_item_sell_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_item_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Sell Price: $30"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_item_sell_price"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Status: Delivered"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details_quantity_table_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_item_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Quantity Table:"
        android:textSize="24sp" />

    <TableLayout
        android:id="@+id/details_quantity_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/details_quantity_table_label"
        android:background="@drawable/border"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:text="Quantity Ordered:"
                android:padding="3dip" />
            <TextView
                android:id="@+id/details_table_quantity_ordered"
                android:text="5"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="In Stock:"
                android:padding="3dip" />
            <TextView
                android:id="@+id/details_table_in_stock"
                android:text="3"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Sold:"
                android:padding="3dip" />
            <TextView
                android:id="@+id/details_table_sold"
                android:text="2"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:padding="3dip"
                android:text="Damaged:" />

            <TextView
                android:id="@+id/details_table_damaged"
                android:text="0"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Written Off:"
                android:padding="3dip" />
            <TextView
                android:id="@+id/details_table_written_off"
                android:text="0"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/details_price_table_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_quantity_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Price Table:"
        android:textSize="24sp" />

    <TableLayout
        android:id="@+id/details_price_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_price_table_label"
        android:background="@drawable/border"
        android:stretchColumns="*">

        <TableRow>
            <TextView
                android:text="Purchase Price:"
                android:padding="3dip" />
            <TextView
                android:text="Shipping Cost:"
                android:padding="3dip" />
            <TextView
                android:text="Total Cost:"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/details_table_purchase_price"
                android:text="$20"
                android:padding="3dip" />
            <TextView
                android:id="@+id/details_table_shipping_cost"
                android:text="$0.5"
                android:padding="3dip" />
            <TextView
                android:id="@+id/details_table_total_cost"
                android:text="$20.5"
                android:padding="3dip" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/details_item_delete_button"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/details_price_table"
        android:text="Delete Item"/>
</androidx.constraintlayout.widget.ConstraintLayout>